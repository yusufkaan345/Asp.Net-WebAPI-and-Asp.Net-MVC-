<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerse.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-GLhlTQ8iK7l5iakUZ5P4FfFfNl/Z9nL6enQqU+e9I1KR5LlwoK7jiiY3eI2wEm+P"
          crossorigin="anonymous">
    <style>
        .custom-navbar {
            background-color: #FFCF96 !important;
        }

        .navbar .navbar-nav {
            flex-direction: row;
        }

        .navbar .nav-item {
            padding-right: 10px;
        }

        .navbar .btn-sepet {
            background-color: #FB6868;
            color: #fff;
        }

            .navbar .btn-sepet.active {
                background-color: #FB6868;
                border-color: #FB6868;
                color: #fff;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar custom-navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-ffc096 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ECommerse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light btn btn-danger @((ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark btn "
                               asp-area="" asp-controller="Product" asp-action="Index">Kategoriler</a>
                        </li>
                    </ul>

                    <!-- Sepetim Butonu -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light btn btn-sepet @((ViewContext.RouteData.Values["Controller"].ToString() == "Sepet") ? "active" : "")"
                               asp-area="" asp-controller="Sepet" asp-action="Index">Sepetim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ECommerse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-l0ZlYAAeCBN5V3+ri+4tcfF4G+TxlVNx6wooaQ4eQScXLHzPeck+nTk2a5aAgOhb"
            crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
